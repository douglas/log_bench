#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../lib/log_bench"

# Initialize configuration for standalone usage
LogBench.setup unless LogBench.configuration

def show_help
  puts <<~HELP
    LogBench - Rails Log Viewer

    Usage:
      log_bench [log_file] [options]
      log_bench --help
      log_bench --version

    Options:
      --logger_type=TYPE    Specify logger format: lograge or semantic_logger
                            (default: lograge)

    Examples:
      log_bench                                    # View log/development.log (lograge)
      log_bench log/production.log                 # View specific log file
      log_bench /path/to/app/log/test.log          # View log from another app
      log_bench --logger_type=semantic_logger      # Use SemanticLogger format
      log_bench log/dev.log --logger_type=lograge  # Specify both file and logger

    Setup (for Rails apps):
      LogBench is automatically enabled in development!
      Just restart your Rails server after installing the gem.

      To customize or enable in other environments:
      For complete setup: https://github.com/silva96/log_bench#configuration

    For more info: https://github.com/silva96/log_bench
  HELP
end

def show_version
  puts "LogBench #{LogBench::VERSION}"
end

# Parse command line arguments
log_file = nil
logger_type = nil

ARGV.each do |arg|
  case arg
  when "--help", "-h"
    show_help
    exit 0
  when "--version", "-v"
    show_version
    exit 0
  when /^--logger_type=(.+)$/
    logger_type = $1.to_sym
    unless [:lograge, :semantic_logger].include?(logger_type)
      puts "‚ùå Invalid logger type: #{logger_type}"
      puts "Valid options: lograge, semantic_logger"
      exit 1
    end
  else
    log_file = arg unless arg.start_with?("--")
  end
end

begin
  log_file ||= "log/development.log"

  # Set logger type if specified via CLI
  if logger_type
    LogBench.setup do |config|
      config.logger_type = logger_type
    end
  end

  # Check if log file exists
  unless File.exist?(log_file)
    puts "‚ùå Log file not found: #{log_file}"
    puts
    puts "Make sure:"
    puts "  1. You're in a Rails application directory"
    puts "  2. The log file exists and has content"
    puts "  3. Lograge is configured (see README.md for setup)"
    puts
    puts "For help: log_bench --help"
    exit 1
  end

  LogBench::App::Main.new(log_file).run
rescue Interrupt
  Curses.close_screen if defined?(Curses)
  puts "\nGoodbye! üëã"
  exit 0
rescue => e
  Curses.close_screen if defined?(Curses)
  puts "‚ùå Error: #{e.message} \n#{e.backtrace.join("\n")}"
  puts
  puts "Common issues:"
  puts "  - Log file doesn't exist or is empty"
  puts "  - Lograge not configured (see README.md for setup)"
  puts "  - Log format not supported (LogBench requires lograge JSON format)"
  puts
  puts "For help: log_bench --help"
  exit 1
end
